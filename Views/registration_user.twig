{% extends "./Templates/template.twig" %}

{% block title %}Inscription adhérent {% endblock %}

{% block stylesheet %}<link rel="stylesheet" href="{{root}}/Views/Templates/css/style.css">{% endblock %}

{% block header %} {% include "./Templates/header/header.twig" %} {% endblock %}

{% block content %}
    <h1>Inscription adhérent</h1>
    <form action="" method="post">
        <label for="firstname">Prénom</label>
        <input type="text" id="firstname" name="firstname" required>

        <label for="lastname">Nom</label>
        <input type="text" id="lastname" name="lastname" required>

        <label for="email">Email</label>
        <input type="email" id="email" name="email">
        
        <label for="numberAd">Numéro Adhérent</label>
        <input type="text" name="numberAd" id="numberAd" value="{{user.resultGenerateNumber}}">
        
        <button type="submit">Inscription</button>

    </form>
{% endblock %}




{% block footer %} {% include "./Templates/footer/footer.twig" %} {% endblock %}