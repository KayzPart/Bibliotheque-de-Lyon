{% extends "./Templates/template.twig" %}

{% block title %}Réservation
{% endblock %}

{% block stylesheet %}<link rel="stylesheet" href="{{root}}/Views/Templates/css/style.css">
{% endblock %}

{% block header %}
	{% include "./Templates/header/headerAdmin.twig" %}
{% endblock %}

{% block content %}


<h1 class="title histo">Reservation</h1>

<div class="in-progress">
    <div class="user-historique">
        <div class="book-res">
            {% for b in book %}
                <div class="bookreserv">
                    <p>{{b.getTitle}}</p>
                    <p>{{b.getIsbn}}</p>
                </div>
            {% endfor %}
        </div>
        <div class="book-date">
            {% for r in reservs %}
                <div class="date">
                    <p>{{r.getEnd_date_reserv|date('d/m/Y')}}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

    <form action="{{root}}/updateBooking" method="POST">
        <input type="hidden" value"{{view.getStatus}}"c name"newStatus">
        <input type="submit" name="submit" value="Confirmer la réservation">
    </form>

{% endblock %}

{% block footer %}
	{% include "./Templates/footer/footer-co.twig" %}
{% endblock %}